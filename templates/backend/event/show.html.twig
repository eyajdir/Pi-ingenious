{% extends 'backend/base.html.twig' %}
{% block nav %}
    {% include 'backend/include/navbar.html.twig' %}
{% endblock %}
{% block sidebar %}
    {% include 'backend/include/sidebar.html.twig' %}
{% endblock %}



{% block body %}
<div class="content-page">
    <div class="container-fluid">
    <h1>Event</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ event.id }}</td>
            </tr>
            <tr>
                <th>Id_comp</th>
                <td>{{ event.idComp }}</td>
            </tr>
            <tr>
                <th>Nbr</th>
                <td>{{ event.nbr }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ event.date ? event.date|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ event.description }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td><a class ="btn btn-success"href ="../../{{ event.image }}">Show image </a></td>

            </tr>
        </tbody>
    </table>

        <a href="{{ path('event_index_backend') }}">back to list</a>

        <a href="{{ path('event_edit_backend', {'id': event.id}) }}">edit</a>

        {{ include('backend/event/_delete_form.html.twig') }}
</div>
</div>
{% endblock %}
