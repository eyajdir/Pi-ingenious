

{% block body %}
<div class="content-page">
    <div class="container-fluid">
        <div class="row">

            <div class="col-xl-9 col-lg-8">
                <div class="card">
                    <div class="card-header d-flex justify-content-between">
                        <div class="header-title">
                            <h4 class="card-title">New Event</h4>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="new-user-info">
                            {{ form_start(form,{'attr':{'novalidate':'novalidate'}}) }}
                            <div class="row">
                                <div class="form-group col-md-6">
                                    {{ form_row(form.id_comp, {"attr" : {'class':'form-control'},"label":"Id Company"})}}

                                    <div  class="alert alert-danger">
                                        {{ form_errors(form.id_comp) }}
                                    </div>
                                </div>

                                    <div class="form-group col-md-6">
                                        {{ form_row(form.nbr, {"attr" : {'class':'form-control'},"label":"Numbre Of Places"})}}
                                        <div  class="alert alert-danger">
                                            {{ form_errors(form.nbr) }}
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="form-group col-md-6">
                                            <div class="form-group col-md-6">
                                                {{ form_row(form.date)}}
                                                <div  class="alert alert-danger">
                                                    {{ form_errors(form.date) }}
                                                </div>
                                        </div>

                                            <div class="form-group col-md-6">
                                                {{ form_row(form.description, {"attr" : {'class':'form-control'},"label":"Description"})}}
                                                <div  class="alert alert-danger">
                                                    {{ form_errors(form.description) }}
                                                </div>
                                            </div>

                                                <div class="form-group col-md-6">
                                                    {{ form_row(form.image, {"attr" : {'class':'form-control'},"label":"Image "})}}


                                                    <button type="submit" class="btn btn-primary mr-2">{{ button_label|default('Save') }}</button>



                                                </div>

                                    </div>
                                <hr>

                                            {{ form_end(form) }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

{% endblock %}