

{% block body %}
    <div class="content-page">
        <div class="container-fluid">
            <div class="row">

                <div class="col-xl-9 col-lg-8">
                    <div class="card">
                        <div class="card-header d-flex justify-content-between">
                            <div class="header-title">
                                <h4 class="card-title">New Blog</h4>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="new-user-info">
                                {{ form_start(form,{'attr':{'novalidate':'novalidate'}}) }}
                                <div class="row">
                                    <div class="form-group col-md-6">
                                        {{ form_row(form.user, {"attr" : {'class':'form-control'},"label":"Id user"})}}
                                       <div  class="alert alert-danger">
                                           {{ form_errors(form.user) }}
                                       </div>

                                    </div>

                                    <div class="form-group col-md-6">
                                        {{ form_row(form.cat, {"attr" : {'class':'form-control'},"label":"category"})}}
                                        <div  class="alert alert-danger">
                                            {{ form_errors(form.cat) }}
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="form-group col-md-6">
                                            <div class="form-group col-md-6">
                                                {{ form_row(form.date)}}
                                            <div  class="alert alert-danger">
                                                {{ form_errors(form.date) }}
                                            </div>
                                        </div>

                                        <div class="form-group col-md-6">
                                            {{ form_row(form.contenu, {"attr" : {'class':'form-control'},"label":"Description"})}}
                                            <div  class="alert alert-danger">
                                                {{ form_errors(form.contenu) }}
                                            </div>
                                        </div>
                                        <div class="form-group col-md-6">
                                            {{ form_row(form.image, {"attr" : {'class':'form-control'},"label":"image"})}}
                                        </div>

                                        <div class="form-group col-md-6">
                                            {{ form_row(form.titre, {"attr" : {'class':'form-control'},"label":"Titre "})}}
                                            <div  class="alert alert-danger">
                                                {{ form_errors(form.titre) }}
                                            </div>


                                            <button type="submit" class="btn btn-primary mr-2">{{ button_label|default('Save') }}</button>



                                        </div>

                                    </div>
                                    <hr>

                                    {{ form_end(form) }}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}